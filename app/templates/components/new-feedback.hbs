<h5>New Feedback</h5>
  <div>
    <form>
      <div class="form-group">
        <label for="author">User</label>
        {{input class="form-control" value=user id="user"}}
      </div>
      <div class="form-group">
        <label for="rating">Rating</label>
        {{input class="form-control" value=rating id="rating" type="number" min=1 max=5}}
      </div>
      <div class="form-group">
        <label for="content">Details</label>
        {{textarea class="form-control" value=details id="details" rows="6" cols="40"}}
      </div>
      <button {{action 'saveFeedback' item}} class="btn btn-primary">Save</button>
    </form>
</div>
