{{#if addNewItem}}
  <h3>Add a new item</h3>
  <div class="form-div">
    <form>
      <div class="form-group">
        <label for="name">Item Name</label>
        {{input class="form-control" value=name id="name"}}
      </div>
      <div class="form-group">
        <label for="price">Item Price</label>
        {{input class="form-control" value=price id="price"}}
      </div>
      <div class="form-group">
        <label for="description">Item Description</label>
        {{textarea class="form-control" value=description id="description"}}
      </div>
      <div class="form-group">
        <label for="image">Item Image</label>
        {{input class="form-control" value=image id="image"}}
      </div>
      <button class="btn btn-info" {{action 'saveItem1'}}>Add New Item</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'showItemForm'}}>Add Form</button>
{{/if}}
