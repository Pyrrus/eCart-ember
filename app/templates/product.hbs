<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
        <div class="item-image">
          <h2>{{model.name}}</h2>
          {{#link-to 'product' model.id}}<img class="img-responsive" src="{{model.image}}">{{/link-to}}
        </div>
        <div class="model-description">
          <p>
            {{model.description}}
          </p>
          <p>
            {{great-deal model.price}} <br>
            ${{model.price}}
          </p>
          <p>
            <button class="btn btn-success" {{action 'addToCart' model model.price}}>Add to Cart</button>
          </p>
        </div>

        <hr />

        {{feedback-list feedbacks=model.feedbacks}}

        {{new-feedback saveFeedback="saveFeedback" item=model}}
    </div>
  </div>
</div>
