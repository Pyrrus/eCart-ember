<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
        <div class="item-image">
          <h2>{{model.name}}</h2>
          {{#link-to 'product' model.id}}<img class="img-responsive" src="{{model.image}}">{{/link-to}}
        </div>
        <div class="model-description">
          <p>
            {{model.description}}
          </p>
          <p>
            ${{model.price}}
          </p>
          <p>
            <button>Add cart</button>
          </p>
        </div>

        <hr />

        {{#each model.feedbacks as |feedback|}}
          <div class="panel panel-default">
            <div class="panel-body">
              <p>Rating: {{feedback.rating}}</p>
              <br />
              <p>{{feedback.details}}</p>
            </div>
            <div class="panel-footer">by {{feedback.user}}</div>
          </div>
          {{else}}
          not working
        {{/each}}

        {{new-feedback saveFeedback="saveFeedback" item=model}}
    </div>
  </div>
</div>
