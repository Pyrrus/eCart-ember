<div class="container">
  <div class="row">
    {{#each model as |item|}}
      <div class="col-md-4">
        <div class="well">
          <div class="item-image">
            <h4>{{item.name}}</h4>
            {{#link-to 'product' item.id}}<img src="{{item.image}}">{{/link-to}}
          </div>
          <div class="item-description">
            <p>
              {{item.description}}
            </p>
            {{great-deal item.price}}
            <p>
              ${{item.price}}
            </p>
          </div>
        </div>
      </div>
      {{else}}
      Not found
    {{/each}}
  </div>
</div>
